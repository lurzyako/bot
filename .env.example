# Telegram bot
BOT_TOKEN=replace-with-your-telegram-bot-token

# WebApp URL
HTML_FILE_URL=https://lurzyako.github.io/bot/

# Django backend sync from bot.py
DJANGO_BACKEND_URL=http://127.0.0.1:8000
DJANGO_BACKEND_API_KEY=replace-with-strong-api-key
DJANGO_BACKEND_TIMEOUT=5

# Django app settings
DJANGO_SECRET_KEY=replace-with-strong-secret-key
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DJANGO_TIME_ZONE=Europe/Moscow

# DB engine: mysql or sqlite
DJANGO_DB_ENGINE=mysql

# MySQL settings (for phpMyAdmin visibility)
MYSQL_DATABASE=kfl_bot
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306

# Shared key for bot -> backend API
DJANGO_BOT_API_KEY=replace-with-the-same-value-as-DJANGO_BACKEND_API_KEY
